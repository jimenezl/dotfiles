Global {
    edge=bottom
    allign=left
    margin=0
    widthtype=percent
    width=22
    height=33
    transparent=0
    tintcolor=#000000
    alpha=0
    autohide=1
    heightwhenhidden=2
    setdocktype=1
    setpartialstrut=0
    usefontcolor=1
    fontsize=10
    fontcolor=#ffffff
    usefontsize=0
    background=0
    backgroundfile=/usr/share/lxpanel/images/background.png
    iconsize=30
    loglevel=2
}

